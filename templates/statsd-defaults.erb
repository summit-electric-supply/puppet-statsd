<% case @provider -%>
<% when 'apt' -%>
STATSJS="/usr/share/statsd/stats.js"
<% when 'npm' -%>
STATSJS="/usr/lib/node_modules/statsd/stats.js"
<% end -%>
STATSD_CONFIG="<%= configfile %>"
STATSD_LOGFILE="<%= logfile %>"
DAEMON_ARGS="$STATSJS $STATSD_CONFIG $STATSD_LOGFILE"
